{{!
    @template qtype_shortmath/editor

    Example context (json):
    {
        "testInputLabel": "Test",
        "inputSize": 30,
        "inputBoxTitle": "Add Buttons",
        "testBoxTitle": "Test Buttons/Save Template",
        "buttonInputLabel": "Button",
        "inputSpanClass": "answer",
        "expressionInputLabel": "Expression",
        "buttonClass": "btn btn-primary",
        "addButtonValue": "Add",
        "deleteIconClass": "fa fa-trash fa-2x",
        "nameInputLabel": "Name",
        "saveButtonValue": "Save",
        "backButtonValue": "Go Back",
        "toolbarTitle": "Toolbar",
        "nameErrorMessage": "Name cannot be empty!"
    }
}}

<div class="overlay" id="overlay-div"></div>
<div class="que shortmath container-fluid">
    <form class="needs-validation" novalidate id="saveForm">
        <div class="row">
            <div class="col-md-4 mb-3 p-0">
                <label for="name">{{nameInputLabel}}</label>
                <input type="text" class="form-control text-ltr w-auto" name="name"
                       id="name" required>
                <div class="invalid-feedback text-nowrap">{{nameErrorMessage}}</div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-auto mb-3 p-0">
            <h3>{{inputBoxTitle}}</h3>
            <div class="container-fluid">
                <form id="addForm" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-4 mb-3 p-0">
                            <label for="btn">{{buttonInputLabel}}</label>
                            <span class="{{inputSpanClass}}">
                                <input type="text" name="btn" id="btn" size="{{inputSize}}">
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3 p-0">
                            <label for="exp">{{expressionInputLabel}}</label>
                            <span class="{{inputSpanClass}}">
                                <input type="text" name="exp" id="exp" size="{{inputSize}}">
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3 p-0">
                            <input type="button" name="add" id="add"
                                   class="{{buttonClass}}" value="{{addButtonValue}}">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="test-box col-md-6 mb-3 p-0">
            <h3>{{testBoxTitle}}</h3>
            <div class="container-fluid">
                <div class="row">
                    <div class="col mb-3 p-0">
                        <div>{{toolbarTitle}}</div>
                        <div class="controls_wrapper m-0"></div>
                    </div>
                </div>
                <div class="row delete-box d-none">
                    <div class="col mb-3 p-0 d-flex align-items-center justify-content-center">
                        <div class="delete-icon rounded-circle bg-danger text-center">
                            <i class="{{deleteIconClass}} m-2"></i>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3 p-0">
                        <label for="test">{{testInputLabel}}</label>
                        <span class="{{inputSpanClass}}">
                            <input type="text" name="test" id="test" size="{{inputSize}}">
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3 p-0">
                        <input type="button" name="save" id="save"
                               class="{{buttonClass}}" value="{{saveButtonValue}}">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3 p-0">
            <input type="button" name="back" id="back"
                   class="{{buttonClass}}" value="{{backButtonValue}}">
        </div>
    </div>
</div>