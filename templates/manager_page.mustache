{{!
    @template qtype_shortmath/editor

    Example context (json):
    {
            "buttonClass" : "btn btn-primary",
            "templates" : [
                {
                    "id": 1,
                    "name": "Default",
                    "contextid": 1000001,
                    "template" : [
                        {
                            "name" : "default_1",
                            "button" : "<span class=\"mq-root-block\">&plusmn;</span>",
                            "expression" : "\\pm"
                        },
                        {
                            "name" : "default_2",
                            "button" : "<span class=\"mq-root-block\">&pi;</span>",
                            "expression" : "\\pi"
                        }
                    ]
                },
                {
                    "id": 2,
                    "name": "None",
                    "contextid": 1000002,
                    "template" : []
                }
            ],
            "editor_path" : "/question/type/shortmath/view_editor.php",
            "plugin_settings_path" : "/admin/settings.php?section=qtypesettingshortmath"
    }
}}

<div class="container-fluid">
    <div class="row">
        <div class="col p-0 mb-3">
            <input type="button" name="createTemplates" id="createTemplates"
                   class="{{buttonClass}}" value="{{# str}} create_templates, qtype_shortmath {{/ str}}">
        </div>
    </div>
    <div class="row">
        <div class="col p-0 d-flex flex-row flex-wrap">
            {{#templates}}
                <div class="container-fluid template-box m-0 mr-3 mb-3 p-1">
                    <div class="row">
                        <div class="col-8">
                            <h6 class="m-0">
                                <span data-content="{{name}}" class="d-inline-block text-truncate"
                                      style="max-width: 120px;">{{name}}</span>
                            </h6>
                        </div>
                        <div class="col p-0">
                            <span class="m-1">
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Edit Template"
                                   id="edit-template-{{id}}" class="edit-template">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                            </span>
                        </div>
                        <div class="col p-0">
                            <span class="m-1">
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Delete Template"
                                   id="delete-template-{{id}}" class="delete-template">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </span>
                        </div>
                        <form>
                            <input type="hidden" name="templateId" value="{{id}}"/>
                            <input type="hidden" name="templateName" value="{{name}}"/>
                            <input type="hidden" name="templateData" value="{{template}}"/>
                        </form>
                    </div>
                </div>
            {{/templates}}
        </div>
    </div>
    <div class="row">
        <div class="col p-0 mb-3">
            <input type="button" name="back" id="back" class="{{buttonClass}}"
                   value="Go to {{# str}} pluginname, qtype_shortmath {{/ str}} settings">
        </div>
    </div>
</div>
{{#js}}
    require(['qtype_shortmath/editor-manager'],
        function(EditorManager) {
            EditorManager.initialize('{{editor_path}}', '{{plugin_settings_path}}');
        });
{{/js}}
